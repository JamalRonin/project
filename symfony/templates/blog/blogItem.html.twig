<div class="col-lg-8 pr-35 md-pr-15 md-mb-50">
    <div class="row">
        {% for article in articles %}
        <div class="col-lg-12 mb-50">
            <div class="blog-item">
                <div class="blog-img">
                    <a href="{{path('app_blog_show' ,{slug:article.slug})}}"><img src="{{asset('/images/blog/inner/style1/1.jpg')}}" alt=""></a>
                    <ul class="post-categories">
                        <li><a href="">{{article.category}}</a></li>
                    </ul>
                </div>
                <div class="blog-content">
                    <h3 class="blog-title"><a href="{{path('app_blog_show' ,{slug:article.slug})}}">{{article.title}}</a></h3>
                    <div class="blog-meta">
                        <ul class="btm-cate">
                            <li>
                                <div class="blog-date">
                                    <i class="fi fi-rr-calendar"></i> {{article.createdAt|date('d/m/Y')}}                                                       
                                </div>
                            </li>
                            <li>
                                <div class="author">
                                    <i class="fi fi-rr-user"></i> Admin  
                                </div>
                            </li> 
                        </ul>
                    </div>
                    <div class="blog-desc">   
                        {{article.intro}}...          
                    </div>
                    <div class="blog-button">
                        <a class="blog-btn" href="{{path('app_blog_show' ,{slug:article.slug})}}">Lire la suite</a>
                    </div>
                </div>
            </div>
        </div>            
        {% endfor %}
    </div>
</div>